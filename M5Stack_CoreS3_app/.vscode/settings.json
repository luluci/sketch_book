{
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_style": "file",
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
    },
    "[markdown]": {
        "editor.insertSpaces": false,
    },
    "[plaintext]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.comments.insertSpace": false
    },
    "files.associations": {
        "array": "cpp",
        "deque": "cpp",
        "list": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "string_view": "cpp",
        "initializer_list": "cpp",
        "utility": "cpp",
        "lv_os.h": "c",
        "portmacro.h": "c",
        "lv_event.h": "c",
        "ratio": "cpp",
        "hal_drv.h": "c",
        "stddef.h": "c",
        "stdint.h": "c",
        "i2c_periph.h": "c",
        "soc_caps.h": "c",
        "i2c_caps.h": "c",
        "*.tcc": "cpp",
        "fstream": "cpp",
        "istream": "cpp",
        "ostream": "cpp",
        "sstream": "cpp",
        "cstddef": "cpp",
        "hal.h": "c"
    },
    "cSpell.words": [
        "coreink",
        "mbus",
        "platformio",
        "Struct"
    ],
    "markdownlint.config": {
        "MD033": false, // allow Inline HTML
    },
    "C_Cpp.default.cppStandard": "gnu++17",
    "C_Cpp.default.includePath": []
}